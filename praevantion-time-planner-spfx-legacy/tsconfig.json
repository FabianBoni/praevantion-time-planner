{
  "compilerOptions": {
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "typeRoots": [
      "../../../node_modules/@types",
      "../../../node_modules/@microsoft"
    ],
    // Remove problematic types; add only if needed and available
    "types": [
      "webpack-env",
      "es6-promise"
    ],
    "lib": [
      "es5",
      "dom",
      "es2015"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
